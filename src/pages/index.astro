---
import Layout from '../layouts/Layout.astro';
import Card from '@lib/widgets/Card.astro';
import Hero from '@lib/widgets/Hero.astro';
import Footer from '@lib/widgets/Footer.svelte';
---

<Layout title="Rodis">
  <main class="mx-auto p-4 max-w-2xl">
    <Hero />
  </main>
  <div class="flex justify-around my-8 mx-auto max-w-7xl">
    <Card
      href="/books/"
      title="Shelf Life"
      body="My personal reading list and thoughts on books."
    />
    <Card
      href="https://astro.build/integrations/"
      title="Integrations"
      body="Supercharge your project with new frameworks and libraries."
    />
    <Card
      href="https://astro.build/themes/"
      title="Themes"
      body="Explore a galaxy of community-built starter themes."
    />
  </div>
  <Footer />
</Layout>
